{
  "namespace": "server_form",
  "$schema": "https://kalmemarq.github.io/Bugrock-JSON-UI-Schemas/ui.schema.json",

  "long_form": {
    "type": "panel",
    "size": ["100%", "100%"],
    "controls": [
      {
        //FORM 1
        "default_long_form@common_dialogs.main_panel_no_buttons": {
          "$title_panel": "common_dialogs.standard_title_label",
          "$title_size": ["100% - 14px", 10],
          "size": [225, 200],
          "$text_name": "#title_text",
          "$title_text_binding_type": "none",
          "$child_control": "server_form.long_form_panel",
          "layer": 2,
          "bindings": [
            {
              "binding_name": "#title_text"
            },
            {
              "binding_type": "view",
              "source_property_name": "((#title_text - 'Portal Gun Options') = #title_text)",
              "target_property_name": "#visible"
            }
          ]
        }
      },
      {
        //FORM 2
        "custom_long_form": {
          "type": "panel",
          "size": [322.5, 185],
          "layer": 2,
          "controls": [
            {
              "indent_panel": {
                "type": "panel",
                "size": ["100% - 16px", "100%"],
                "controls": [
                  {"my_form_label@server_form.my_form_label": {}},
                  { "my_super_custom_panel_main@server_form.my_super_custom_panel_main": {}},
                  { "my_form_background@server_form.my_form_background": {}},
                  { "button_panel@server_form.my_super_custom_panel_main":{}}
                ]
              }
            }
          ],
          "bindings": [
            {
              "binding_name": "#title_text"
            },
            {
              "binding_type": "view",
              "source_property_name": "(#title_text = 'Portal Gun Options')",
              "target_property_name": "#visible"
            }
          ]
        }
      }
    ]
  },
  "my_form_label": {
    "type": "label",
    "font_type": "MinecraftTen",
    "font_size": "medium",
    "anchor_from": "bottom_right",
    "anchor_to": "bottom_right",
    "text": "#form_text",
    "layer": 8,
    "offset": [-20, -50],
    "bindings": [
      {
        "binding_name": "#form_text"
      }
    ]
  },

  "my_form_background": {
    "type": "image",
    "size": ["100% + 520px", "100% + 520px"],
    "texture": "textures/ui/custom_back"
  },

  "my_super_custom_panel_main": {
    "type": "stack_panel",
    "orientation": "horizontal",
    "size": ["100%", "100%"],

    "anchor_from": "center",
		"anchor_to": "center",
    
    "collection_name": "form_buttons",

    "controls": [
      {
        "saved_Locations_button@server_form.custom_button": {
          "$button_size": [100, 100],
          "$padding": [163, 153],
          "$icon_size": [90, 90],
          "collection_index": 0
        }
      },

      {
        "right_stack": {
          "type": "stack_panel",
          "orientation": "vertical",
          "size": ["100%", "100%"],
          "anchor_from": "center",
					"anchor_to": "center",

          "collection_name": "form_buttons",
          "controls": [
            {
              "set_coordinates_button@server_form.custom_button": {
                "$button_size": [130, 35],
                "$padding": [96, 88],
                "$icon_size": [20, 20],
                "collection_index": 1
              }
            },
            {
              "bottom_right_stack": {
                "type": "stack_panel",
                "orientation": "horizontal",
                "size": ["100%", "100%"],
                "anchor_from": "center",
								"anchor_to": "center",

                "collection_name": "form_buttons",
                "controls": [
                  {
                    "select_mode_button@server_form.custom_button": {
                      "$button_size": [65, 40],
                      "$padding": [30, 0],
                      "$icon_size": [28, 28],
                      "collection_index": 2
                    }
                  },
                  {
                    "settings_button@server_form.custom_button": {
                      "$button_size": [65, 40],
                      "$padding": [105, 0],
                      "$icon_size": [20, 20],
                      "collection_index": 3
                    }
                  },
                  {
                    "close_button@server_form.custom_button": {
                      "$button_size": [40, 40],
                      "$padding": [180, -170],
                      "$icon_size": [30, 30],
                      "$show_text": false,
                      "$offset_image": [0, 0],
                      "$default_button_texture": "textures/ui/custom_bg_hover",
                      "collection_index": 4
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  },
  "custom_button": {
    "$padding|default": [80, 80],
    "$button_size|default": [64, 64],
    "$icon_size|default": [32, 32],
    "$show_text|default": true,
    "$offset_image|default": [0, -5],
    "$default_button_texture": "textures/ui/custom_bg",
    "$hover_button_texture": "textures/ui/custom_bg_hover",
    "$pressed_button_texture": "textures/ui/custom_bg_hover",
    "type": "panel",
    "size": "$padding",
    "controls": [
      {
        "mainUi": {
          "type": "panel",
          "size": "$button_size",
          "controls": [
            {
              "panel_name": {
                "type": "panel",
                "size": "$button_size",
                "bindings": [
                  {
                    "binding_type": "view",
                    "source_control_name": "image",
                    "resolve_sibling_scope": true,
                    "source_property_name": "(not (#texture = ''))",
                    "target_property_name": "#visible"
                  }
                ],

                "controls": [
                  {
                    "image": {
                      "type": "image",
                      "layer": 200,
                      "size": "$icon_size",
                      "offset": "$offset_image",
                      "bindings": [
                        {
                          "binding_name": "#form_button_texture",
                          "binding_name_override": "#texture",
                          "binding_type": "collection",
                          "binding_collection_name": "form_buttons"
                        },
                        {
                          "binding_name": "#form_button_texture_file_system",
                          "binding_name_override": "#texture_file_system",
                          "binding_type": "collection",
                          "binding_collection_name": "form_buttons"
                        },
                        {
                          "binding_type": "view",
                          "source_property_name": "(not ((#texture = '') or (#texture = 'loading')))",
                          "target_property_name": "#visible"
                        }
                      ]
                    }
                  },
                  {
                    "text": {
                      "type": "label",
                      "text": "#form_button_text",
                      "layer": 32,
                      "color": [1, 1, 1],
                      "offset": [0, -8],
                      "anchor_from": "bottom_middle",
                      "visible": "$show_text",
                      "bindings": [
                        {
                          "binding_name": "#form_button_text",
                          "binding_type": "collection",
                          "binding_collection_name": "form_buttons"
                        }
                      ]
                    }
                  }
                ]
              }
            },
            {
              "form_button@common_buttons.light_text_button": {
                "$pressed_button_name": "button.form_button_click",
                "anchor_from": "top_left",
                "anchor_to": "top_left",
                "size": "$button_size",
                "$button_text": "",
                "$button_text_binding_type": "collection",
                "$button_text_grid_collection_name": "form_buttons",
                "$button_text_max_size": ["100%", 20],
                "bindings": [
                  {
                    "binding_type": "collection_details",
                    "binding_collection_name": "form_buttons"
                  }
                ]
              }
            }
          ]
        }
      }
    ]
  }
}
